<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Sign Up</title>

    <!-- Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Bootstrap Icons from CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Link to your custom CSS file -->
    <link rel="stylesheet" href="/css/signup.css">

    <!-- Font Awesome for themed icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <div id="sign-up-container" class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
        <h1 class="mb-4 text-primary">
            <i class="bi bi-person-fill mr-2"></i>
            <img src="/images/vampire_logo.png" alt="Vampire Logo" class="logo">
            Sign Up
        </h1>
        <form method="POST" action="/api/signup" class="w-100" style="max-width: 400px;">
            <div class="form-group">
                <label for="name"><i class="bi bi-person-fill mr-1"></i>Name:</label>
                <input type="text" name="name" id="name" class="form-control" required placeholder="Enter your name">
            </div>
            <div class="form-group">
                <label for="email"><i class="bi bi-envelope-fill mr-1"></i>Email:</label>
                <input type="email" name="email" id="email" class="form-control" required placeholder="Enter your email">
            </div>
            <div class="form-group">
                <label for="password"><i class="bi bi-key-fill mr-1"></i>Password:</label>
                <input type="password" name="password" id="password" class="form-control" required placeholder="Enter your password">
            </div>
            <div class="form-group">
                <label for="role"><i class="bi bi-person-badge mr-1"></i>Role:</label>
                <select name="role" id="role" class="form-control">
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            <div class="form-group">
                <label for="act"><i class="fas fa-bat mr-1"></i>Act:</label>
                <select name="act" id="act" class="form-control">
                    <option value="human">Human</option>
                    <option value="vampire">Vampire</option>
                    <option value="werewolf">Werewolf</option>
                    <option value="siren">Siren</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">
                <i class="fas fa-user-plus"></i> Sign Up
            </button>
        </form>

        <!-- Theme toggle button -->
        <button id="theme-toggle-btn" class="btn btn-secondary mt-4">
            <i class="bi bi-moon-fill"></i> Toggle Dark Mode
        </button>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- JavaScript to handle dark/light mode toggle -->
    <script>
        const toggleBtn = document.getElementById('theme-toggle-btn');
        const container = document.getElementById('sign-up-container');

        // Check and apply saved theme on page load
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
            container.classList.toggle('dark-mode', savedTheme === 'dark');
            updateToggleButton();
        }

        // Function to update the toggle button icon and text
        function updateToggleButton() {
            if (container.classList.contains('dark-mode')) {
                toggleBtn.innerHTML = '<i class="bi bi-sun-fill"></i> Toggle Light Mode';
            } else {
                toggleBtn.innerHTML = '<i class="bi bi-moon-fill"></i> Toggle Dark Mode';
            }
        }

        // Event listener to toggle between dark and light mode
        toggleBtn.addEventListener('click', () => {
            container.classList.toggle('dark-mode');
            localStorage.setItem('theme', container.classList.contains('dark-mode') ? 'dark' : 'light');
            updateToggleButton();
        });
    </script>
</body>

</html>