<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>

    <!-- Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <!-- Link to your custom CSS file -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <header class="bg-primary text-white text-center py-4">
        <h1>Admin Dashboard</h1>
    </header>

    <main class="container py-4">
        <div class="row">
            <!-- Statistics Section -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Statistics</h2>
                        <p>Total Users: <%= data.usersCount %></p>
                        <p>Active Users: <%= data.activeUsersCount %></p>
                    </div>
                </div>
            </div>

            <!-- Recent Activities Section -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Recent Activities</h2>
                        <ul class="list-group list-group-flush">
                            <% data.recentActivities.forEach(activity => { %>
                                <li class="list-group-item">
                                    <%= activity.details %> at <%= activity.timestamp %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Role Breakdown Section -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">User Role Breakdown</h2>
                        <ul class="list-group list-group-flush">
                            <% data.userRolesBreakdown.forEach(role => { %>
                                <li class="list-group-item">
                                    <%= role._id %>: <%= role.count %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>